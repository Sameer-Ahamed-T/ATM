import java.util.*;
import java.util.Scanner;
class Informations
{
    private String Name;
    private int password;
    private int balance;
    public int Accountnumber;
    public int deposit;
    public int withdrawl;
    Informations(String Name,int Accountnumber,int password,int balance)
    {
      this.Name=Name;
      this.Accountnumber=Accountnumber;
      this.password=password;
      this.balance=balance;
    }
    void Deposit()
    {
      Scanner ew=new Scanner(System.in);
      System.out.println("Enter the amount to deposit:");
      deposit=ew.nextInt();
      balance +=deposit;
    }
    void Withdrawl()
    {  
      Scanner re=new Scanner(System.in);
      System.out.print("Enter the amount to withdrawl:");
      withdrawl=re.nextInt();
      if(withdrawl>balance)
      {
          System.out.println("Insufficient Fund");
          return;
      }
      balance-=withdrawl;
    }
    void Display()
    {
      System.out.println("Name:"+Name);
      System.out.println("The Account Number:"+Accountnumber);
      System.out.println("The Balance:"+balance);
    }
}
class ATM
{
  public static void main(String[] args)
  {
    Scanner sc=new Scanner(System.in);
    String Name;int Acc_no;int password;int balance;
    String n;
    System.out.print('Enter the File Name:");
    n=sc.next();
    int h=0;
    String f=n+".txt";
    Informations[] I=new Informations[100];
    if(f==null)
    {
        System.out.print("Enter the Name:");
        Name=sc.nextLine();
        System.out.print("Enter the Account Number:");
        Acc_no=sc.nextInt();
        System.out.print("Enter the Password:");
        password=sc.nextInt();
        System.out.println("Enter the Balance:");
        balance=sc.nextInt();
        I[h]=new Informations(Name,Acc_no,password,balance);
        h+=1;
    }
    int ch=1;
    while(true)
    {
      int k;
      int j=-1;
      System.out.print("Enter the Account Number(0 to Exit):");
      k=sc.nextInt();
      if(k==0)
        break;
      for(int i=0;i<n;i++)
      {
        if(I[i].Accountnumber==k)
        {
          j=i;break;
        }
      }
      if(j==-1)
      {  
        System.out.println("Not Found");
        continue;
      }
      int c;
      System.out.print("Enter your choice:\n1.Deposit\n2.Withdrawl\n3.Exit\nEnter:");
      c=sc.nextInt();
      switch(c)
      {
        case 1:
              I[j].Deposit();break;
        case 2:
              I[j].Withdrawl();break;
        case 3:
              ch=0;break;
        default:
              System.out.println("Wrong Input");break;
      }
      if(ch==0)
          break;
    }
    for(int i=0;i<n;i++)
    {
        System.out.println("The Details of Customer:");
        I[i].Display();
    }
  }
}
